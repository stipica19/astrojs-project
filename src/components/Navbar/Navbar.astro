---
import styles from "./Navbar.module.css";

export interface Props {
  brand?: string;
  labels?: { service: string; product: string; about: string; contact: string };
  lang?: "hr" | "en";
  currentPath?: string;
}
const {
  brand = "Bitelex",
  labels = {
    service: "Service",
    product: "Product",
    about: "About",
    contact: "Contact",
  },
  lang = "hr",
  currentPath,
}: Props = Astro.props;

const effectivePath = currentPath ?? Astro.url?.pathname;

const getLangHref = (targetLang: "hr" | "en") => {
  if (!effectivePath) return `/${targetLang}/`;
  const match = effectivePath.match(/^\/(hr|en)(\/.*)?$/);
  if (!match) return `/${targetLang}/`;
  const rest = match[2] ?? "/";
  return `/${targetLang}${rest}`;
};

const hrHref = getLangHref("hr");
const enHref = getLangHref("en");
---

<nav id="site-nav" class={styles["site-nav"]} aria-label="Main navigation">
  <div class={styles["site-nav__inner"]}>
    <!-- Brand -->
    <a
      href={lang ? `/${lang}/` : "/"}
      class={styles["site-nav__brand"]}
      aria-label={brand}
    >
      <span class={styles["brand-bracket"]}>&lt;</span>
      <span class={styles["brand-name"]}>{brand}</span>
      <span class={styles["brand-bracket"]}>/&gt;</span>
    </a>

    <!-- Desktop links -->
    <ul class={styles["site-nav__links"]} role="list">
      <li>
        <a href="#service" class={styles["site-nav__link"]}>
          <span class="link-index">01</span>
          <span class="link-label">{labels.service}</span>
        </a>
      </li>
      <li>
        <a href="#product" class={styles["site-nav__link"]}>
          <span class="link-index">02</span>
          <span class="link-label">{labels.product}</span>
        </a>
      </li>
      <li>
        <a href="#about" class={styles["site-nav__link"]}>
          <span class="link-index">03</span>
          <span class="link-label">{labels.about}</span>
        </a>
      </li>
      <li>
        <a
          href={lang ? `/${lang}/contact` : "/contact"}
          class={styles["site-nav__link"]}
        >
          <span class="link-index">04</span>
          <span class="link-label">{labels.contact}</span>
        </a>
      </li>
    </ul>

    <!-- Lang + mobile toggle -->
    <div class={styles["site-nav__right"]}>
      <!-- Language switcher -->
      <div class={styles["lang-switch"]} role="group" aria-label="Language">
        <a
          href={hrHref}
          class={`${styles["lang-btn"]} ${lang === "hr" ? styles["lang-btn--active"] : ""}`}
          aria-current={lang === "hr" ? "true" : undefined}
          title="Hrvatski"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 32 32"
            aria-hidden="true"
          >
            <path fill="#fff" d="M1 11H31V21H1z"></path>
            <path
              d="M5,4H27c2.208,0,4,1.792,4,4v4H1v-4c0-2.208,1.792-4,4-4Z"
              fill="#ea3323"></path>
            <path
              d="M5,20H27c2.208,0,4,1.792,4,4v4H1v-4c0-2.208,1.792-4,4-4Z"
              transform="rotate(180 16 24)"
              fill="#100e91"></path>
            <path
              d="M27,4H5c-2.209,0-4,1.791-4,4V24c0,2.209,1.791,4,4,4H27c2.209,0,4-1.791,4-4V8c0-2.209-1.791-4-4-4Zm3,20c0,1.654-1.346,3-3,3H5c-1.654,0-3-1.346-3-3V8c0-1.654,1.346-3,3-3H27c1.654,0,3,1.346,3,3V24Z"
              opacity=".15"></path>
            <path
              d="M16.001,22h0c2.524,0,4.59-2.065,4.59-4.59v-5.454H11.412v5.454c0,2.524,2.065,4.59,4.59,4.59h0Z"
              fill="#ea3323"></path>
            <path
              d="M16.001,21.926h0c2.476,0,4.502-2.026,4.502-4.502v-5.38H11.499v5.38c0,2.476,2.026,4.502,4.502,4.502Z"
              fill="#fff"></path>
            <path d="M13.399,12.214h-1.733v1.904h1.733v-1.904Z" fill="#ea3323"
            ></path>
            <path d="M13.399,16.021h1.733v-1.904h-1.733v1.904Z" fill="#ea3323"
            ></path>
            <path
              d="M11.667,17.414c0,.173,.011,.343,.031,.511h1.702v-1.904h-1.733v1.393Z"
              fill="#ea3323"></path>
            <path d="M16.865,16.021h-1.733v1.904h1.733v-1.904Z" fill="#ea3323"
            ></path>
            <path d="M16.865,19.828h1.733v-1.904h-1.733v1.904Z" fill="red"
            ></path>
            <path
              d="M18.598,20.87c.384-.29,.719-.642,.989-1.041h-.989v1.041Z"
              fill="#ea3323"></path>
            <path d="M13.4,19.828h1.733v-1.904h-1.733v1.904Z" fill="#ea3323"
            ></path>
            <path
              d="M12.409,19.828c.271,.4,.606,.752,.991,1.043v-1.043h-.991Z"
              fill="#ea3323"></path>
            <path
              d="M16.3,21.732c.192-.013,.38-.039,.565-.077v-1.827h-1.733v1.827c.184,.038,.372,.063,.563,.077,.202,.012,.404,.012,.605,0h0Z"
              fill="#ea3323"></path>
            <path
              d="M20.298,17.925c.02-.168,.031-.339,.031-.513v-1.391h-1.731v1.904h1.7Z"
              fill="#ea3323"></path>
            <path d="M16.865,16.021h1.733v-1.904h-1.733v1.904Z" fill="#ea3323"
            ></path>
            <path d="M16.865,12.214h-1.733v1.904h1.733v-1.904Z" fill="#ea3323"
            ></path>
            <path d="M20.329,14.117v-1.904h-1.731v1.904h1.731Z" fill="#ea3323"
            ></path>
            <path
              d="M20.426,11.9l1.074-2.435-.818-1.322-1.356,.502-.952-1.088-1.255,.719-1.119-.916-1.119,.916-1.255-.719-.952,1.088-1.356-.502-.819,1.322,1.073,2.436c1.352-.612,2.851-.953,4.427-.953s3.074,.341,4.426,.952h0Z"
              fill="#fff"></path>
          </svg>
        </a>
        <span class={styles["lang-sep"]}>/</span>
        <a
          href={enHref}
          class={`${styles["lang-btn"]} ${lang === "en" ? styles["lang-btn--active"] : ""}`}
          aria-current={lang === "en" ? "true" : undefined}
          title="English"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 32 32"
            aria-hidden="true"
          >
            <rect x="1" y="4" width="30" height="24" rx="4" ry="4" fill="#fff"
            ></rect>
            <path
              fill="#be2a2a"
              d="M31 14L18 14 18 4 14 4 14 14 1 14 1 18 14 18 14 28 18 28 18 18 31 18 31 14z"
            ></path>
            <path
              d="M27,4H5c-2.209,0-4,1.791-4,4V24c0,2.209,1.791,4,4,4H27c2.209,0,4-1.791,4-4V8c0-2.209-1.791-4-4-4Zm3,20c0,1.654-1.346,3-3,3H5c-1.654,0-3-1.346-3-3V8c0-1.654,1.346-3,3-3H27c1.654,0,3,1.346,3,3V24Z"
              opacity=".15"></path>
          </svg>
        </a>
      </div>

      <!-- Mobile hamburger -->
      <button
        class={styles["site-nav__toggle"]}
        aria-controls="mobile-menu"
        aria-expanded="false"
        id="nav-toggle"
        aria-label="Open main menu"
      >
        <span class={styles["toggle-bar"]}></span>
        <span class={styles["toggle-bar"]}></span>
        <span class={styles["toggle-bar"]}></span>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class={styles["site-nav__mobile"]} aria-hidden="true">
    <ul role="list">
      <li>
        <a href="#service" class={styles["mobile-link"]}>
          <span class={styles["mobile-index"]}>01</span>
          {labels.service}
        </a>
      </li>
      <li>
        <a href="#product" class={styles["mobile-link"]}>
          <span class={styles["mobile-index"]}>02</span>
          {labels.product}
        </a>
      </li>
      <li>
        <a href="#about" class={styles["mobile-link"]}>
          <span class={styles["mobile-index"]}>03</span>
          {labels.about}
        </a>
      </li>
      <li>
        <a
          href={lang ? `/${lang}/contact` : "/contact"}
          class={styles["mobile-link"]}
        >
          <span class={styles["mobile-index"]}>04</span>
          {labels.contact}
        </a>
      </li>
    </ul>

    <div class={styles["mobile-lang"]}>
      <a
        href={hrHref}
        class={`${styles["lang-btn"]} ${lang === "hr" ? styles["lang-btn--active"] : ""}`}
        title="Hrvatski"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 32 32"
          aria-hidden="true"
        >
          <path fill="#fff" d="M1 11H31V21H1z"></path>
          <path
            d="M5,4H27c2.208,0,4,1.792,4,4v4H1v-4c0-2.208,1.792-4,4-4Z"
            fill="#ea3323"></path>
          <path
            d="M5,20H27c2.208,0,4,1.792,4,4v4H1v-4c0-2.208,1.792-4,4-4Z"
            transform="rotate(180 16 24)"
            fill="#100e91"></path>
          <path
            d="M27,4H5c-2.209,0-4,1.791-4,4V24c0,2.209,1.791,4,4,4H27c2.209,0,4-1.791,4-4V8c0-2.209-1.791-4-4-4Zm3,20c0,1.654-1.346,3-3,3H5c-1.654,0-3-1.346-3-3V8c0-1.654,1.346-3,3-3H27c1.654,0,3,1.346,3,3V24Z"
            opacity=".15"></path>
        </svg>
      </a>
      <span class={styles["lang-sep"]}>/</span>
      <a
        href={enHref}
        class={`${styles["lang-btn"]} ${lang === "en" ? styles["lang-btn--active"] : ""}`}
        title="English"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 32 32"
          aria-hidden="true"
        >
          <rect x="1" y="4" width="30" height="24" rx="4" ry="4" fill="#fff"
          ></rect>
          <path
            fill="#be2a2a"
            d="M31 14L18 14 18 4 14 4 14 14 1 14 1 18 14 18 14 28 18 28 18 18 31 18 31 14z"
          ></path>
          <path
            d="M27,4H5c-2.209,0-4,1.791-4,4V24c0,2.209,1.791,4,4,4H27c2.209,0,4-1.791,4-4V8c0-2.209-1.791-4-4-4Zm3,20c0,1.654-1.346,3-3,3H5c-1.654,0-3-1.346-3-3V8c0-1.654,1.346-3,3-3H27c1.654,0,3,1.346,3,3V24Z"
            opacity=".15"></path>
        </svg>
      </a>
    </div>
  </div>
</nav>

<script
  define:vars={{
    toggleClass: styles["site-nav__toggle"],
    mobileClass: styles["site-nav__mobile"],
    mobileOpenClass: styles["site-nav__mobile--open"],
  }}
>
  const toggle = document.querySelector(`.${toggleClass}`);
  const menu = document.querySelector(`.${mobileClass}`);

  if (toggle && menu) {
    toggle.addEventListener("click", () => {
      const isOpen = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", String(!isOpen));
      menu.setAttribute("aria-hidden", String(isOpen));
      menu.classList.toggle(mobileOpenClass, !isOpen);
    });
  }
</script>

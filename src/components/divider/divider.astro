---
import { Lightbulb } from "@lucide/astro";
import styles from "./divider.module.css";

interface Props {
  dark?: boolean;
  iconSize?: number;
  class?: string;
}

const {
  dark = false,
  iconSize = 22,
  class: className = "",
}: Props = Astro.props;
---

<div
  class={`my-2 flex w-full items-center gap-5 ${className}`}
  aria-hidden="true"
>
  <div
    class={`h-px flex-1 bg-linear-to-l ${dark ? "from-slate-600/60 to-transparent" : "from-slate-300/80 to-transparent"}`}
  >
  </div>

  <span
    class={`${styles["divider-bulb"]} inline-flex h-10 w-10 items-center justify-center rounded-full ${
      dark ? styles["divider-bulb--dark"] : styles["divider-bulb--light"]
    }`}
  >
    <Lightbulb width={iconSize} height={iconSize} />
  </span>

  <div
    class={`h-px flex-1 bg-linear-to-r ${dark ? "from-slate-600/60 to-transparent" : "from-slate-300/80 to-transparent"}`}
  >
  </div>
</div>

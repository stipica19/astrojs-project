---
import bg from "../assets/hero2.png";

interface Props {
  badge?: string;
  title?: string;
  subtitle?: string;
  note?: string;
  ctaExplore?: string;
  ctaView?: string;
}
const {
  badge = "For developers",
  title = "We share ideas",
  subtitle = "Technical solutions.",
  note = "Stranica je za developere — modern stack, čiste komponente.",
  ctaExplore = "Explore Services",
  ctaView = "View Products",
}: Props = Astro.props;
---

<section class="relative isolate overflow-hidden min-h-[70vh] pt-16 md:pt-20">
  <!-- Background image -->
  <div
    class="absolute inset-0 -z-10 bg-cover bg-center scale-y-[-1]"
    style={`background-image: url(${bg.src})`}
    aria-hidden="true"
  >
  </div>
  <!-- Soft gradient overlay for readability -->
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-b from-white/40 via-white/10 to-white"
  >
  </div>

  <div class="mx-auto max-w-screen-xl px-4 py-20 md:py-28 lg:px-6">
    <div class="flex justify-start">
      <div class="max-w-3xl text-center md:text-left" id="hero">
        <div
          class="inline-flex items-center gap-2 rounded-full border border-sky-200 bg-white/70 px-3 py-1 text-xs text-sky-700 shadow-sm"
        >
          <span class="h-2 w-2 rounded-full bg-sky-500"></span>
          {badge}
        </div>
        <h1
          class="mt-4 text-balance text-4xl font-extrabold tracking-tight text-white uppercase md:text-6xl"
          style="text-shadow: 0 2px 4px rgba(0,0,0,.2);"
        >
          {title}
        </h1>
        <p
          class="mt-4 text-xl text-white md:text-3xl"
          style="text-shadow: 0 2px 4px rgba(0,0,0,.2);"
        >
          {subtitle}
        </p>
        <p
          class="mt-6 text-lg text-white"
          style="text-shadow: 0 2px 4px rgba(0,0,0,.25);"
        >
          {note}
        </p>
        <div
          class="mt-10 flex items-center justify-center md:justify-start gap-4"
        >
          <a
            href="#service"
            class="rounded-md bg-sky-600 px-5 py-2.5 text-white shadow hover:bg-sky-700"
            >{ctaExplore}</a
          >
          <a
            href="#product"
            class="rounded-md border bg-white border-gray-300 px-5 py-2.5 text-gray-900 hover:bg-gray-50 hover:text-gray-900"
            >{ctaView}</a
          >
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  const hero = document.getElementById("hero");
  if (hero) {
    const [badge, title, subtitle, note, cta] = [
      hero.children[0],
      hero.children[1],
      hero.children[2],
      hero.children[3],
      hero.children[4],
    ];

    gsap.set([badge, title, subtitle, note, cta], { autoAlpha: 0, y: 20 });
    gsap
      .timeline({ defaults: { ease: "power2.out" } })
      .to(badge, { autoAlpha: 1, y: 0, duration: 0.5 })
      .to(title, { autoAlpha: 1, y: 0, duration: 0.6 }, "-=0.2")
      .to(subtitle, { autoAlpha: 1, y: 0, duration: 0.6 }, "-=0.3")
      .to(note, { autoAlpha: 1, y: 0, duration: 0.6 }, "-=0.3")
      .to(cta, { autoAlpha: 1, y: 0, duration: 0.6 }, "-=0.3");
  }
</script>

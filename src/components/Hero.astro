---
interface HeadlineParts {
  line1: string;
  accent: string;
  suffix: string;
  outline: string;
}

interface StatsLabels {
  projects: string;
  experience: string;
  clients: string;
}

interface Props {
  badge?: string;
  headline?: HeadlineParts;
  kicker?: string;
  description?: string;
  ctaExplore?: string;
  ctaView?: string;
  statsLabels?: StatsLabels;
}

const {
  badge = "For growing businesses",
  headline = {
    line1: "Web solutions",
    accent: "for serious",
    suffix: "",
    outline: "growth.",
  },
  kicker = "// web development studio",
  description = "Fast, modern and scalable web applications built to generate more leads, increase sales and automate your business.",
  ctaExplore = "Request a Quote",
  ctaView = "View Our Work",
  statsLabels = {
    projects: "Projects",
    experience: "Years of Experience",
    clients: "Happy Clients",
  },
}: Props = Astro.props;
---

<section class="hero" id="hero">
  <!-- LEFT -->
  <div class="hero-left">
    <div class="badge">{badge}</div>

    <h1 class="hero-title">
      <span class="line"><span class="line-inner">{headline.line1}</span></span>
      <span class="line">
        <span class="line-inner">
          <span class="accent-word">{headline.accent}</span>{headline.suffix}
        </span>
      </span>
      <span class="line">
        <span class="line-inner"
          ><span class="outline-word">{headline.outline}</span></span
        >
      </span>
    </h1>

    <p class="hero-sub">
      <span class="hi">{kicker}</span><br />
      {description}
    </p>

    <div class="cta-row">
      <a href="#service" class="btn-primary">
        {ctaExplore}
        <span class="arrow">â†’</span>
      </a>
      <a href="#product" class="btn-secondary"> {ctaView} </a>
    </div>

    <div class="stats">
      <div>
        <div class="stat-value">47+</div>
        <div class="stat-label">{statsLabels.projects}</div>
      </div>
      <div>
        <div class="stat-value">3yr</div>
        <div class="stat-label">{statsLabels.experience}</div>
      </div>
      <div>
        <div class="stat-value">100%</div>
        <div class="stat-label">{statsLabels.clients}</div>
      </div>
    </div>
  </div>

  <!-- RIGHT: terminal -->
  <div class="hero-right" aria-hidden="true">
    <div class="geo-wrap" id="geo-wrap">
      <svg
        class="geo-svg"
        viewBox="0 0 500 500"
        xmlns="http://www.w3.org/2000/svg"
      >
        <!-- Outer octagon frame -->
        <polygon
          class="oct-frame"
          points="250,42 382,102 440,234 390,368 258,438 118,382 52,250 102,116"
        ></polygon>

        <!-- Rings -->
        <circle class="geo-ring geo-ring-1" cx="250" cy="250" r="200"></circle>
        <circle class="geo-ring geo-ring-2" cx="250" cy="250" r="155"></circle>
        <circle class="geo-ring geo-ring-3" cx="250" cy="250" r="108"></circle>

        <!-- Hexagon -->
        <g class="hex-group">
          <polygon
            class="hex"
            points="250,90 370,160 370,300 250,370 130,300 130,160"></polygon>
        </g>

        <!-- Cross lines -->
        <g class="cross-lines">
          <line x1="50" y1="50" x2="450" y2="450"></line>
          <line x1="450" y1="50" x2="50" y2="450"></line>
          <line x1="250" y1="30" x2="250" y2="470"></line>
          <line x1="30" y1="250" x2="470" y2="250"></line>
        </g>

        <!-- Triangle -->
        <g class="tri-group">
          <polygon class="tri" points="250,148 342,298 158,298"></polygon>
        </g>

        <!-- Orbiting dots -->
        <g class="orbit orbit-1"
          ><circle class="orb-dot" cx="250" cy="50" r="5"></circle></g
        >
        <g class="orbit orbit-2"
          ><circle class="orb-dot dot-2" cx="250" cy="95" r="4"></circle></g
        >
        <g class="orbit orbit-3"
          ><circle class="orb-dot dot-3" cx="250" cy="142" r="3"></circle></g
        >

        <!-- Corner squares -->
        <rect class="corner-sq sq1" x="36" y="36" width="18" height="18" rx="2"
        ></rect>
        <rect class="corner-sq sq2" x="446" y="36" width="18" height="18" rx="2"
        ></rect>
        <rect class="corner-sq sq3" x="36" y="446" width="18" height="18" rx="2"
        ></rect>
        <rect
          class="corner-sq sq4"
          x="446"
          y="446"
          width="18"
          height="18"
          rx="2"></rect>

        <!-- Core -->
        <circle class="core-outer" cx="250" cy="250" r="38"></circle>
        <circle class="core-mid" cx="250" cy="250" r="24"></circle>
        <circle class="core-inner" cx="250" cy="250" r="11"></circle>

        <!-- Ticks -->
        <g class="ticks">
          <line x1="250" y1="48" x2="250" y2="62"></line>
          <line x1="250" y1="438" x2="250" y2="452"></line>
          <line x1="48" y1="250" x2="62" y2="250"></line>
          <line x1="438" y1="250" x2="452" y2="250"></line>
          <line x1="108" y1="108" x2="118" y2="118"></line>
          <line x1="392" y1="108" x2="382" y2="118"></line>
          <line x1="108" y1="392" x2="118" y2="382"></line>
          <line x1="392" y1="392" x2="382" y2="382"></line>
        </g>

        <!-- Scan line -->
        <line class="scan-line" x1="50" y1="250" x2="450" y2="250"></line>
      </svg>

      <div class="geo-label gl-1">01 / design</div>
      <div class="geo-label gl-2">02 / build</div>
      <div class="geo-label gl-3">03 / deploy</div>
    </div>
  </div>

  <div class="scroll-hint">
    scroll
    <div class="scroll-line"></div>
  </div>
</section>

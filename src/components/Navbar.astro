<style>
  /* ─── tokens (match Hero) ─── */
  :root {
    --nav-bg-base: transparent;
    --nav-bg-scrolled: rgba(7, 9, 13, 0.92);
    --nav-border: rgba(255, 255, 255, 0.07);
    --nav-accent: #3b82f6;
    --nav-accent2: #06b6d4;
    --nav-green: #22d3a5;
    --nav-muted: #4a6274;
    --nav-text: #b8ccd8;
    --nav-bright: #e8f4ff;
    --nav-font-mono: "JetBrains Mono", monospace;
    --nav-font-display: "Syne", sans-serif;
  }

  /* ─── base ─── */
  .site-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition:
      background 0.35s ease,
      border-color 0.35s ease,
      box-shadow 0.35s ease;
    background: var(--nav-bg-base);
    border-bottom: 1px solid transparent;
  }

  /* scrolled state (toggled via JS) */
  .site-nav--scrolled {
    background: var(--nav-bg-scrolled);
    border-bottom-color: var(--nav-border);
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }

  .site-nav__inner {
    max-width: 1280px;
    margin-inline: auto;
    padding: 0 2.5rem;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  /* ─── brand ─── */
  .site-nav__brand {
    font-family: var(--nav-font-mono);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.1em;
    transition: opacity 0.2s;
  }
  .site-nav__brand:hover {
    opacity: 0.75;
  }
  .brand-bracket {
    color: var(--nav-muted);
  }
  .brand-name {
    color: var(--nav-bright);
  }

  /* ─── desktop links ─── */
  .site-nav__links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .site-nav__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.85rem;
    border-radius: 3px;
    font-family: var(--nav-font-mono);
    font-size: 0.72rem;
    text-decoration: none;
    color: var(--nav-muted);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    border: 1px solid transparent;
    transition:
      color 0.2s,
      border-color 0.2s,
      background 0.2s;
    position: relative;
  }

  .link-index {
    font-size: 1rem;
    color: var(--nav-accent);
    opacity: 0.6;
    transition: opacity 0.2s;
  }
  .link-label {
    font-size: 1rem;
    transition: color 0.2s;
  }

  .site-nav__link::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 50%;
    right: 50%;
    height: 1px;
    background: var(--nav-accent);
    transition:
      left 0.25s ease,
      right 0.25s ease;
  }

  .site-nav__link:hover {
    color: var(--nav-bright);
    border-color: var(--nav-border);
    background: rgba(59, 130, 246, 0.05);
  }
  .site-nav__link:hover .link-index {
    opacity: 1;
  }
  .site-nav__link:hover::after {
    left: 0.85rem;
    right: 0.85rem;
  }

  /* active link (JS-powered) */
  .site-nav__link--active {
    color: var(--nav-accent);
    border-color: rgba(59, 130, 246, 0.2);
    background: rgba(59, 130, 246, 0.06);
  }
  .site-nav__link--active .link-index {
    opacity: 1;
  }
  .site-nav__link--active::after {
    left: 0.85rem;
    right: 0.85rem;
  }

  /* ─── right cluster ─── */
  .site-nav__right {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  /* ─── language switcher ─── */
  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .lang-sep {
    font-family: var(--nav-font-mono);
    font-size: 0.65rem;
    color: var(--nav-muted);
  }

  .lang-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 3px;
    border: 1px solid transparent;
    opacity: 0.45;
    transition:
      opacity 0.2s,
      border-color 0.2s,
      transform 0.15s;
    text-decoration: none;
    overflow: hidden;
  }
  .lang-btn:hover {
    opacity: 0.85;
    transform: scale(1.08);
  }
  .lang-btn--active {
    opacity: 1;
    border-color: var(--nav-border);
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.2);
  }
  .lang-btn svg {
    display: block;
    border-radius: 2px;
  }

  /* ─── hamburger toggle ─── */
  .site-nav__toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    gap: 5px;
    width: 36px;
    height: 36px;
    background: none;
    border: 1px solid var(--nav-border);
    border-radius: 3px;
    cursor: pointer;
    padding: 8px;
    transition: border-color 0.2s;
  }
  .site-nav__toggle:hover {
    border-color: rgba(59, 130, 246, 0.4);
  }

  .toggle-bar {
    display: block;
    height: 1px;
    background: var(--nav-text);
    border-radius: 1px;
    transition:
      width 0.25s ease,
      transform 0.25s ease,
      opacity 0.2s ease;
  }
  .toggle-bar:nth-child(1) {
    width: 18px;
  }
  .toggle-bar:nth-child(2) {
    width: 14px;
  }
  .toggle-bar:nth-child(3) {
    width: 18px;
  }

  /* open state */
  .site-nav__toggle[aria-expanded="true"] .toggle-bar:nth-child(1) {
    width: 18px;
    transform: translateY(6px) rotate(45deg);
  }
  .site-nav__toggle[aria-expanded="true"] .toggle-bar:nth-child(2) {
    opacity: 0;
    width: 0;
  }
  .site-nav__toggle[aria-expanded="true"] .toggle-bar:nth-child(3) {
    width: 18px;
    transform: translateY(-6px) rotate(-45deg);
  }

  /* ─── mobile menu ─── */
  .site-nav__mobile {
    display: none;
    margin: 0 1rem 0.75rem;
    border: 1px solid var(--nav-border);
    border-radius: 4px;
    background: rgba(13, 17, 23, 0.97);
    backdrop-filter: blur(16px);
    overflow: hidden;
    /* slide-down animation */
    animation: slideDown 0.22s ease forwards;
  }
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .site-nav__mobile ul {
    list-style: none;
    margin: 0;
    padding: 0;
    border-bottom: 1px solid var(--nav-border);
  }

  .mobile-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.85rem 1.25rem;
    font-family: var(--nav-font-mono);
    font-size: 0.72rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--nav-text);
    text-decoration: none;
    border-bottom: 1px solid var(--nav-border);
    transition:
      color 0.15s,
      background 0.15s;
  }
  .mobile-link:last-of-type {
    border-bottom: none;
  }
  .mobile-link:hover {
    color: var(--nav-accent);
    background: rgba(59, 130, 246, 0.04);
  }

  .mobile-index {
    font-size: 1rem;
    color: var(--nav-accent);
    opacity: 0.55;
    flex-shrink: 0;
  }

  .mobile-lang {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 1.25rem;
    justify-content: flex-end;
  }

  /* ─── responsive ─── */
  @media (max-width: 768px) {
    .site-nav__links {
      display: none;
    }
    .site-nav__toggle {
      display: flex;
    }
    .site-nav__inner {
      padding: 0 1.25rem;
    }
  }
</style>

<script>
  // ─── mobile toggle ───
  const btn = document.getElementById("nav-toggle") as HTMLButtonElement | null;
  const menu = document.getElementById("mobile-menu") as HTMLElement | null;

  if (btn && menu) {
    menu.style.display = "none";

    btn.addEventListener("click", () => {
      const isOpen = menu.style.display !== "none";
      if (isOpen) {
        menu.style.display = "none";
        btn.setAttribute("aria-expanded", "false");
        menu.setAttribute("aria-hidden", "true");
      } else {
        menu.style.display = "block";
        btn.setAttribute("aria-expanded", "true");
        menu.setAttribute("aria-hidden", "false");
      }
    });

    // close on link click
    menu.querySelectorAll("a[href^='#']").forEach((link) => {
      link.addEventListener("click", () => {
        menu.style.display = "none";
        btn.setAttribute("aria-expanded", "false");
        menu.setAttribute("aria-hidden", "true");
      });
    });
  }

  // ─── scroll-based bg ───
  const nav = document.getElementById("site-nav");
  const scrolled = "site-nav--scrolled";

  const updateNav = () => {
    if (!nav) return;
    nav.classList.toggle(scrolled, window.scrollY >= 80);
  };

  updateNav();
  window.addEventListener("scroll", updateNav, { passive: true });

  // ─── active link highlight on scroll ───
  const sections = document.querySelectorAll<HTMLElement>("[id]");
  const navLinks =
    document.querySelectorAll<HTMLAnchorElement>(".site-nav__link");

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        const id = entry.target.id;
        navLinks.forEach((link) => {
          const href = link.getAttribute("href") ?? "";
          link.classList.toggle("site-nav__link--active", href === `#${id}`);
        });
      });
    },
    { rootMargin: "-40% 0px -55% 0px" },
  );

  sections.forEach((s) => observer.observe(s));
</script>

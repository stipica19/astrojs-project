---
export interface Props {
  brand?: string;
  labels?: { service: string; product: string; about: string; contact: string };
  lang?: "hr" | "en";
  currentPath?: string;
}
const {
  brand = "Bitelex",
  labels = {
    service: "Service",
    product: "Product",
    about: "About",
    contact: "Contact",
  },
  lang = "hr",
  currentPath,
}: Props = Astro.props;

const effectivePath = currentPath ?? Astro.url?.pathname;

const getLangHref = (targetLang: "hr" | "en") => {
  if (!effectivePath) return `/${targetLang}/`;
  const match = effectivePath.match(/^\/(hr|en)(\/.*)?$/);
  if (!match) return `/${targetLang}/`;
  const rest = match[2] ?? "/";
  return `/${targetLang}${rest}`;
};

const hrHref = getLangHref("hr");
const enHref = getLangHref("en");
---

<nav id="site-nav" class="site-nav" aria-label="Main navigation">
  <div class="site-nav__inner">
    <!-- Brand -->
    <a
      href={lang ? `/${lang}/` : "/"}
      class="site-nav__brand"
      aria-label={brand}
    >
      <span class="brand-bracket">&lt;</span>
      <span class="brand-name">{brand}</span>
      <span class="brand-bracket">/&gt;</span>
    </a>

    <!-- Desktop links -->
    <ul class="site-nav__links" role="list">
      <li>
        <a href="#service" class="site-nav__link">
          <span class="link-index">01</span>
          <span class="link-label">{labels.service}</span>
        </a>
      </li>
      <li>
        <a href="#product" class="site-nav__link">
          <span class="link-index">02</span>
          <span class="link-label">{labels.product}</span>
        </a>
      </li>
      <li>
        <a href="#about" class="site-nav__link">
          <span class="link-index">03</span>
          <span class="link-label">{labels.about}</span>
        </a>
      </li>
      <li>
        <a href={lang ? `/${lang}/contact` : "/contact"} class="site-nav__link">
          <span class="link-index">04</span>
          <span class="link-label">{labels.contact}</span>
        </a>
